<h1> <%= @recipe.name %> </h1>

<%= @recipe.instructions %>
<br>
<h3>Who cooked this dish? </h3>
<ul>
    <% @recipe.posts.each do |post| %> 
    <li> <%= link_to post.user.name, user_path(post.user) %> rated this 
    <%= link_to 'recipe', post_path(post) %>  
    <%= post.rating %> out of 5 stars </li><br>
<%end%> 
</ul>
<ul>
<li>Type of cuisine: <%= link_to @recipe.cuisine.name, cuisine_path(@recipe.cuisine) %> </li>
<li>Prep time: <%=@recipe.prep_time%> min</li>
<li>Serving size: <%=@recipe.serving_size%> person</li></ul>

<h3>Ingredients</h3>
<ul>
    <% @recipe.ingredients.each do |ri| %> 
    <li><%= link_to ri.name, ingredient_path(ri) %> </li>
<%end%> 
</ul>




