
<div>
<%if flash[:errors]%>
<div class='showpost'></div>
    <%flash[:errors].each do |error|%>
       <h2 class= 'tile rec' ><%error%></h2>
    <% end %>
<% elsif flash[:error]%>
    <% flash.each do |type, msg| %>
       <h2 class= 'tile rec'> <%= msg %>  </h2>
    </div>
    <% end %>
<% end %>

    <% @users.each do |user| %> 
    <div class='indexpageuser'>
       <%= link_to user.name, user_path(user), class: "tile_header" %> 
       <br>
    <img src=<%=user.picture %> > 
    <br>
    <div class="tile_text">
        age <%= user.age %> 
    </div>
    
    <br>
    <div class="tile_text padding_bottom_30">Recent Activity</div> 
    <% user.posts.each do |post| %>
    <%= link_to post.description, post_path(post), class: "tile_text" %> 
        <%end%> 
    </div>
    <%end%> 
</div>

 