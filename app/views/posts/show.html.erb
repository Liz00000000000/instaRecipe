<h1 class= 'tile rec'><%= @post.recipe.name %> </h1>
<br>

<img class='tile rec' src= <%= @post.recipe.picture %> > <br>

<br>
<h3 class= 'tile '><%= @post.description %> </h3>
<h2 class='tile '> by <%= link_to @post.user.name, user_path(@post.user) %> </h2>
<br>

<div class= 'tile'>
    Liked: <%= @post.like %>
    <%= button_to 'Like this post', like_path(@post), method: :put, class: "btn btn info" %>
</div>
<br>
<div class='tile'>
    Dislikes: <%= @post.dislike %>
    <%= button_to 'dislike this post', dislike_path(@post), method: :put, class: "btn btn info" %>
</div>
<br>
<div class='tile'>
    love: <%= @post.love %>
    <%= button_to 'love this post', love_path(@post), method: :put, class: "btn btn info" %>
</div>
<br>
<div class='tile'>
    Disgust: <%= @post.disgust %>
    <%= button_to 'digust this post', disgust_path(@post), method: :put, class: "btn btn info" %>
</div>

<br>
<h4 class='tile'>Comments</h4>
<% @post.post_react.each do |react|  %> 
<h4 class = 'tile'> <%= react.comment %></h4>
<%end%> 


<%= button_to 'Edit this post', edit_post_path(@post), method: :get%> 
<%= button_to 'Delete this post', post_path(@post), method: :delete%><br>

